<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BhTelekomTest.View.Authentication.SignUp"
             Title="Sign Up">
    <VerticalStackLayout>
        <Label Margin="20,20,20,0" Text="Email" />
        <Entry Margin="20,20,20,0" Placeholder="johndoe@email.com" Text="{Binding Email}" />
        <Label Margin="20,20,20,0" Text="Username" />
        <Entry Margin="20,20,20,0" Placeholder="johndoe" Text="{Binding Username}" />
        <Label Margin="20,20,20,0" Text="Password" />
        <Entry Placeholder="Password" Margin="20,20,20,0" Text="{Binding Password}" IsPassword="True" />
        <Button Margin="20,20,20,0" Command="{Binding SignUpCommand}" Text="Sign Up" />
        <Button Margin="20,20,20,0" Command="{Binding NavigateSignInCommand}" Text="Already have an account? Sign in" />
    </VerticalStackLayout>
</ContentPage>