<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BhTelekomTest.View.Authentication.SignIn"
             Title="Sign In">
    <VerticalStackLayout>
        <Label Margin="20,20,20,0" Text="Email" />
        <Entry Margin="20,20,20,0" Placeholder="johndoe@email.com" Text="{Binding Email}" />
        <Label Margin="20,20,20,0" Text="Password" />
        <Entry Margin="20,20,20,0" Text="{Binding Password}" Placeholder="Password" IsPassword="True" />
        <Button Margin="20,20,20,0" Command="{Binding SignInCommand}" Text="Sign In" />
        <Button Margin="20,20,20,0" Command="{Binding NavigateSignUpCommand}" Text="Need an account? Sign up" />
    </VerticalStackLayout>
</ContentPage>